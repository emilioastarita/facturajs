{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "./src/"
  },
  "filesGlob": [
    "*.ts"
  ],
  "include": [
    "src/**/*",
    "node_modules/ntpclient/dist/cjs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

